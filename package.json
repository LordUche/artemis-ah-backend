{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "start": "babel-node ./server/app.js",
    "dev": "nodemon --exec babel-node ./server/app.js",
    "test": "npm run reset:db && nyc mocha --require @babel/polyfill --require @babel/register ./server/test/ --timeout 10000 --exit",
    "sequelize": "./node_modules/.bin/babel-node ./node_modules/.bin/sequelize $*",
    "migrate": "./node_modules/.bin/babel-node ./node_modules/.bin/sequelize db:migrate",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "reset:db": "npm run sequelize db:migrate:undo:all && npm run sequelize db:migrate",
    "start:dev": "npm run reset:db && npm run dev"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@sendgrid/mail": "^6.3.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "cors": "^2.8.5",
    "dotenv": "^6.0.0",
    "ejs": "^2.6.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.3.0",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "mocha": "^6.0.2",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.8.1",
    "request": "^2.87.0",
    "sendgrid": "^5.2.3",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "slug": "^0.9.1",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.3.0"
  }
}
